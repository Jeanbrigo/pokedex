<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <h1>Pok√©dex</h1>
    <button>
        <a href="/pokedex/new">Add a New Pokemon</a>
    </button>
    <div class="container">
        <% for(let i = 0; i < pokemons.length; i++) { %>
        <div class="pokemon">
           <a href="/pokedex/<%=i%>"><img src="<%=pokemons[i].img %>"></a>
           <div class=forms>
            <form action="/pokedex/<%= i %>/edit" method ="GET">
                <input type="submit" value="Edit"/>
            </form>
            <form action="/pokedex/<%= i %>?_method=DELETE" method ="POST">
                <input type="submit" value="Delete"/>
            </form>
            </div>
        </div>
        <% } %>
        
    </div>


</body>
</html>